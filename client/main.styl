/** Body, html, main **/
// header, main, footer
//     padding-left 300px
main
  padding-left 300px

body
  background-image url("/images/background-2.jpg")
  background-size 100% 100%

@media only screen and (max-width: 992px)
  header, main, footer
    padding-left 0

.material-tooltip
  z-index 1501

#authorization-modal .row
  margin 0

.sortable-drag
  cursor move

/** Collection **/
ul#available-list, ul#questions-list
  max-height 100%
  min-height 250px
  box-shadow 0 3px 10px rgba(0, 0, 0, .2);

ul#available-list li, ul#questions-list li
  box-shadow 0 3px 10px rgba(0, 0, 0, .1);
  background-color #fff

/** Material fonts and styles **/
@font-face
  font-family 'Material Icons'
  font-style normal
  font-weight 400
  src local('Material Icons'), local('MaterialIcons-Regular'), url("/fonts/2fcrYFNaTjcS6g4U3t-Y5ZjZjT5FdEJ140U2DJYC3mY.woff2") format('woff2')

.material-icons
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  font-size 24px
  line-height 1
  letter-spacing normal
  text-transform none
  display inline-block
  white-space nowrap
  word-wrap normal
  direction ltr
  -webkit-font-feature-settings 'liga'
  -webkit-font-smoothing antialiased

/** Buttons **/
#change-role
  cursor pointer
  text-decoration underline

#change-role:hover
  color #4caf50

#get-role
  cursor pointer

#get-role:hover
  color #4caf50

/* Div blocks */
#add-default-questionnaire .collapsible-header
  padding 0 15px 0 30px

#add-default-questionnaire .collapsible-body ul li
  border 1px solid rgba(0, 0, 0, .1)

#json-data
  padding 30px

/** Inputs **/
#form-create-question .collection input[type=text]
  height 1.5rem
  margin 0

/** Icons **/
i
  cursor pointer

#add-default-questionnaire .collapsible-header i
  margin-right 0

/** Links **/
.icon-link
  color rgba(0, 0, 0, 0.87)

/** SideNav **/
#about-me li
  line-height 25px;

#slide-out .card
  margin 0

.side-nav .collection span.badge
  margin 0

#side-nav-collection
  overflow visible

/** Footer **/
body
  display flex
  min-height 100vh
  flex-direction column

main
  flex 1 0 auto
